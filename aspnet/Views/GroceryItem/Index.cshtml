@model IEnumerable<clean_aspnet_mvc.Data.GroceryItem>

<h4>Grocery Items</h4>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="grid-basic" class="table table-hover table-striped">
    <thead>
        <tr>
          <th data-column-id="Id" data-type="numeric" data-identifier="true" >
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th data-column-id="Name">
                    @Html.DisplayNameFor(model => model.GroceryItemName)
                </th>
                <th data-column-id="Category">
                    @Html.DisplayNameFor(model => model.GroceryCategory)
                </th>
            <th  data-column-id="link" data-formatter="link" data-sortable="false"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           <td >
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.GroceryItemName)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.GroceryCategory.GroceryCategoryName)
            </td>
            <td >

            </td>
        </tr>
}
    </tbody>
</table>
<script>
$("#grid-basic").bootgrid(
  {
    caseSensitive: false,
    rowCount: [25, 50, 100, -1],
    formatters: {
        "link": function(column, row)
        {
          console.log("row " + row);
            return "<a href='/GroceryItem/edit/" + row.Id+ "'>Edit</a> ";
        }
    }

  }
);

</script>
