@model IEnumerable<GroceryCategory>

<h4>Grocery Categories</h4>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GroceryCategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GroceryCategoryDescription)
                </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroceryCategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroceryCategoryDescription)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
