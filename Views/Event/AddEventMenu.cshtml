@model clean_aspnet_mvc.Data.Event



<form asp-action="AddEventMeal">

    <div class="form-horizontal">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">

            <div class="col-md-4">
              @Html.Hidden( "EventId",  Model.Id )
                @Html.DropDownList("EventMealSlotId", new SelectList(ViewBag.Slots, "Id", "Name"), new { @class="form-control" })

            </div>
             <div class="col-md-4">

                @Html.DropDownList("MenuId", new SelectList(ViewBag.Menus, "Id", "Name"), new { @class="form-control" })

            </div>
            <div class="col-md-4">

<button asp-action="AddEventMeal" type="submit" class="btn btn-default btn-sm pull-left" asp-route-id=@Model.Id>
              <div class="glyphicon glyphicon-plus"  aria-hidden="true" ></div>
              Add Menu
    </button>
            </div>
        </div>

    </div>
</form>




