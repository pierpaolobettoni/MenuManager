@model clean_aspnet_mvc.Data.MealItem



<h3>Create a Meal Item </h3>
<div class="alert alert-info">A meal item is any item that you might put in a dish, for example: potato salad.</div>
<form asp-action="Create">
    <div class="form-horizontal">
        <h4>MealItem</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="MealItemName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MealItemName" class="form-control" />
                <span asp-validation-for="MealItemName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MealItemDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                    <textarea rows="3" class="form-control" asp-for="MealItemDescription"></textarea>


                <span asp-validation-for="MealItemDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Quantity" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MeasureType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MeasureType" class="form-control" />
                <span asp-validation-for="MeasureType" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>


